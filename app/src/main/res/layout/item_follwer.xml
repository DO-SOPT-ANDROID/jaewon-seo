<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_follower_avartar"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_profile" />

    <TextView
        android:id="@+id/tv_follower_name"
        style="@style/TextAppearance.DoSoptJaewon.HeadLineMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@id/iv_follower_avartar"
        app:layout_constraintStart_toStartOf="@id/iv_follower_avartar"
        app:layout_constraintTop_toBottomOf="@id/iv_follower_avartar"
        tools:text="Jaewon Seo" />

    <TextView
        android:id="@+id/tv_follower_email"
        style="@style/TextAppearance.DoSoptJaewon.HeadLineSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/iv_follower_avartar"
        app:layout_constraintStart_toStartOf="@id/iv_follower_avartar"
        app:layout_constraintTop_toBottomOf="@id/tv_follower_name"
        tools:text="librarywon@naver.com" />


</androidx.constraintlayout.widget.ConstraintLayout>