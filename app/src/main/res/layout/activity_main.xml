<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.main.MainActivity">

    <ImageView
        android:id="@+id/iv_main_profile"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_profile"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_profile" />

    <TextView
        android:id="@+id/tv_main_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iv_main_profile"
        app:layout_constraintStart_toEndOf="@id/iv_main_profile"
        app:layout_constraintTop_toTopOf="@id/iv_main_profile"
        tools:text="서재원" />

    <TextView
        android:id="@+id/tv_main_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/main_comment"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_main_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_main_nickname"
        app:layout_constraintTop_toTopOf="@id/iv_main_profile" />

    <TextView
        android:id="@+id/tv_main_id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="ID"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/iv_main_profile"
        app:layout_constraintTop_toBottomOf="@id/iv_main_profile" />

    <TextView
        android:id="@+id/tv_main_id_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/iv_main_profile"
        app:layout_constraintTop_toBottomOf="@id/tv_main_id_title"
        tools:text="librarywon" />

    <TextView
        android:id="@+id/tv_main_hobby_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="취미"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/iv_main_profile"
        app:layout_constraintTop_toBottomOf="@id/tv_main_id_value" />

    <TextView
        android:id="@+id/tv_main_hobby_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/iv_main_profile"
        app:layout_constraintTop_toBottomOf="@id/tv_main_hobby_title"
        tools:text="잠자기" />

</androidx.constraintlayout.widget.ConstraintLayout>